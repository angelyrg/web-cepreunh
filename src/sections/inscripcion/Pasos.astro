---
const { pasos, activo } = Astro.props
---

<div class="flex justify-center">
  <div class="flex flex-wrap justify-center gap-2 md:gap-4">
    {
      pasos.map((paso, index) => (
        <div
          class={`flex w-48 items-center justify-center rounded-lg p-1 text-center ${activo === index ? 'border-2 border-green-600' : 'border-4 border-gray-300'}`}>
          {paso}
        </div>
      ))
    }
  </div>
</div>
